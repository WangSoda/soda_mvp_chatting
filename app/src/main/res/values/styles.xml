<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Theme_AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item> <!--背景色透明-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>   <!--是否为浮动-->
        <item name="android:windowIsTranslucent">true</item> <!--半透明-->
        <item name="android:backgroundDimEnabled">false</item> <!--弹出对话框屏幕变暗-->
    </style>

</resources>
